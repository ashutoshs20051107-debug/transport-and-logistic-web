<%- include('partials/header') %>

<section class="hero" style="background: #1e293b; padding: 3rem 0; min-height: auto; color: white;">
    <div class="container">
        <h1>Management Dashboard</h1>
        <p>Control fleet operations, update statuses, and manage records.</p>
    </div>
</section>



<section class="container" style="padding: 3rem 1.5rem;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 3rem;">
        <div class="service-card" style="padding: 1.5rem; border-left: 5px solid var(--primary);">
            <h4 style="color: var(--text-muted); font-size: 0.8rem; text-transform: uppercase;">Total Active</h4>
            <p style="font-size: 1.8rem; font-weight: 800;"><%= bookings.filter(b => b.status !== 'Delivered').length %></p>
        </div>
        <div class="service-card" style="padding: 1.5rem; border-left: 5px solid var(--accent);">
            <h4 style="color: var(--text-muted); font-size: 0.8rem; text-transform: uppercase;">Total Done</h4>
            <p style="font-size: 1.8rem; font-weight: 800;"><%= bookings.filter(b => b.status === 'Delivered').length %></p>
        </div>
    </div>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h2 style="font-weight: 700;">Shipment Registry</h2>
        <a href="/book" class="btn cta-btn" style="font-size: 0.9rem;">+ Add New Entry</a>
    </div>

    <% if (bookings.length > 0) { %>
        <div style="overflow-x: auto; background: white; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); border: 1px solid #e2e8f0;">
            <table style="width: 100%; border-collapse: collapse; text-align: left;">
                <thead>
                    <tr style="background: #f8fafc; border-bottom: 2px solid #e2e8f0;">
                        <th style="padding: 1.2rem; font-size: 0.85rem;">TRACKING ID</th>
                        <th style="padding: 1.2rem; font-size: 0.85rem;">SENDER</th>
                        <th style="padding: 1.2rem; font-size: 0.85rem;">STATUS</th>
                        <th style="padding: 1.2rem; font-size: 0.85rem;">MANAGEMENT</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(shipment => { %>
                        <tr style="border-bottom: 1px solid #f1f5f9;">
                            <td style="padding: 1.2rem; font-family: monospace; font-size: 0.8rem; color: var(--primary);">
                                <%= shipment._id %>
                            </td>
                            <td style="padding: 1.2rem;">
                                <strong><%= shipment.sender %></strong><br>
                                <small style="color: gray;">To: <%= shipment.delivery %></small>
                            </td>
                            <td style="padding: 1.2rem;">
                                <% if (shipment.status === 'Delivered') { %>
                                    <span style="color: #166534; font-weight: bold; font-size: 0.75rem;">‚úîÔ∏è DELIVERED</span>
                                <% } else { %>
                                    <span style="color: #9a3412; font-weight: bold; font-size: 0.75rem;">üöö IN TRANSIT</span>
                                <% } %>
                            </td>
                            <td style="padding: 1.2rem;">
                                <div style="display: flex; gap: 8px; align-items: center;">
                                    <form action="/tracking/search" method="POST" style="margin:0;">
                                        <input type="hidden" name="trackingId" value="<%= shipment._id %>">
                                        <button type="submit" title="View Details" style="background: #f1f5f9; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer;">üëÅÔ∏è</button>
                                    </form>

                                    <% if (shipment.status !== 'Delivered') { %>
                                        <form action="/dashboard/status/<%= shipment._id %>" method="POST" style="margin:0;">
                                            <button type="submit" title="Mark as Delivered" style="background: #dcfce7; border: none; color: #166534; padding: 5px 10px; border-radius: 4px; cursor: pointer; font-size: 0.75rem; font-weight: bold;">DONE</button>
                                        </form>
                                    <% } %>

                                    <form action="/dashboard/delete/<%= shipment._id %>" method="POST" style="margin:0;" onsubmit="return confirm('Warning: This will permanently delete this shipment record. Continue?')">
                                        <button type="submit" title="Delete Record" style="background: #fee2e2; border: none; color: #991b1b; padding: 5px 10px; border-radius: 4px; cursor: pointer;">üóëÔ∏è</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div style="text-align: center; padding: 4rem; background: #f8fafc; border-radius: 12px; border: 2px dashed #cbd5e1;">
            <p style="color: var(--text-muted);">The registry is currently empty.</p>
        </div>
    <% } %>
</section>

<%- include('partials/footer') %>